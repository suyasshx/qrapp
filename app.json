{
  "expo": {
    "name": "AttendanceApp",
    "slug": "attendance-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow AttendanceApp to access your camera to scan QR codes."
        }
      ],
      "expo-barcode-scanner"
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.attendanceapp.mobile"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
